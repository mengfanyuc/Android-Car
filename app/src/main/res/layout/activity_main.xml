<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background">

    <TextView
        android:id="@+id/direct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="40%"
        app:layout_marginStartPercent="45%"
        android:textSize="30sp"
        android:textColor="@color/colorAccent"
        android:typeface="serif"/>

    <TextView
        android:id="@+id/angle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="60%"
        app:layout_marginStartPercent="45%"
        android:textSize="30sp"
        android:textColor="@color/colorAccent"
        android:typeface="serif"/>

    <TextView
        android:id="@+id/speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="80%"
        app:layout_marginStartPercent="45%"
        android:textSize="30sp"
        android:textColor="@color/colorAccent"
        android:typeface="serif"/>

    <com.project.mt.androidcar.SpeedButton
        android:id="@+id/speed_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="35%"
        app:layout_marginStartPercent="70%"
        android:background="@drawable/speed_button_up_background"/>

    <com.project.mt.androidcar.SpeedButton
        android:id="@+id/speed_subtract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="75%"
        app:layout_marginStartPercent="70%"
        android:background="@drawable/speed_button_down_background"/>

    <com.project.mt.androidcar.KeyButton
        android:id="@+id/key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="10%"
        app:layout_marginStartPercent="45%" />

    <com.project.mt.androidcar.DirectionButton
        android:id="@+id/direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        app:layout_marginTopPercent="35%"
        app:layout_marginStartPercent="10%"/>

</android.support.percent.PercentRelativeLayout>